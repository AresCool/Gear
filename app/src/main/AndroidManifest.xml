<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ares.gear">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.GearApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.LazyLoadActivity" />
        <activity android:name=".activity.FaceBookFrescoActivity" />
        <activity android:name=".activity.ShaderEffectActivity" />
        <activity android:name=".activity.BitmapOriginalSizeActivity" />
        <activity android:name=".activity.Rotate3dActivity" />
        <activity android:name=".activity.AnsyTaskTestAcctivity" />
        <activity android:name=".activity.GifActivity" />
        <activity android:name=".activity.MajorizationHandlerActivity" />

    </application>

</manifest>